#!/bin/bash

CONFIGURE_SYSTEM=0
while [[ $# -gt 0 ]]; do
  key="$1"
  echo "Key: $key"
  case $key in
    -s)
      BEEHIVE_HOST="$2"
      shift
      ;;
    --server=*)
      BEEHIVE_HOST="${key#*=}"
      ;;
    --system)
      CONFIGURE_SYSTEM=1
      ;;
      *)
      ;;
  esac
  shift
done

if [ $CONFIGURE_SYSTEM -eq 1 ]; then
./scripts/configure-system.sh
fi

apt-get --no-install-recommends install -y network-manager
apt-get autoclean
apt-get autoremove -y
